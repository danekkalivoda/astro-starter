---
import { Icon } from "astro-icon";
import HeaderMenu from "@components/molecules/HeaderMenu.astro";
const menuLinks = [
  {
    title: "About",
    url: "/about",
  },
  {
    title: "Features",
    url: "/features",
  },
  {
    title: "Pricing",
    url: "/pricing",
  },
  {
    title: "Contact",
    url: "/contact",
  },
];
const enuButton = () => {

}
---
<header
  x-data={"header()"}
  x-bind="interactions"
  class="fixed top-0 left-0 w-full transition-shadow duration-300 ease-out delay-100 transform bg-white z-[200]"
  x-bind:class="[
        expanded ? 'shadow-xl md:shadow-none' : ''
    ]"
>
  <div
    class="container relative z-20 flex flex-wrap items-center py-2"
  >
    <div class="flex items-center flex-grow md:flex-shrink-0 min-h-12 md:min-h-16">
      <a href="/">
        <Icon name="logo" class="w-6 text-green-400" />
      </a>
      <div
        role="button"
        x-on:click="expanded = ! expanded; $dispatch('submenu-toggle')"
        class="grid grid-cols-1 grid-rows-1 ml-auto md:hidden"
      >
        <Icon
          name="tabler:menu-2"
          class="w-6 h-6 col-start-1 row-start-1"
          x-bind:class="expanded ? 'opacity-0' : 'opacity-100'"
        />
        <Icon
          name="mdi:close"
          class="w-6 h-6 col-start-1 row-start-1"
          x-bind:class="expanded ? 'opacity-100' : 'opacity-0'"
          x-cloak="hidden"
        />
      </div>
    </div>
    <HeaderMenu links={menuLinks} />
  </div>
  <div
    role="button"
    x-show="expanded"
    class="fixed inset-0 z-10 w-full h-screen md:hidden md:pointer-events-none"
    x-cloak="hidden"
    x-on:click="expanded = false"
  >
  </div>
</header>
